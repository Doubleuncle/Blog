{% extends "nav.html" %}
{% load staticfiles %}

{% block title %} 

{{ info }} 

{% endblock %}

{% block style %} 

.img{width:80%;height:80%;vertical-align:middle;}

{% endblock %}
 
{% block main %}
<div style="margin:3% 0%;">
  <div class="layui-row layui-col-space30"> 
    <div class="layui-col-md9">
			<div class="layui-row layui-col-space30">
				
				{% for i in info %}
				<div class="layui-col-md12">
				<div class="layui-card">
        <div class="layui-card-header">{{ i.title }}</div>
        <div class="layui-card-body" style="text-align:center;">
        	{% if i.type == '3' %}
            <img class="img" src='/static/image/{{ i.id }}.png' >
          {% elif i.type == '4' %}
             <audio class="player" src="http://www.ytmp3.cn/down/47174.mp3"> 你的浏览器不支持 </audio>
          {% endif %}
          <p>{{ i.content }}</p><br>
          <p>发表于{{ i.firsttime }}</p>
        </div>
        </div>
        </div>
        {% endfor %}
        
        
			</div>
    </div>
    <div class="layui-col-md3">
      <div class="layui-card">
        <div class="layui-card-header">Tag</div>
        <div class="layui-card-body">
          
        </div>
      </div>
    </div>
    
  </div>
</div> 

{% endblock %}