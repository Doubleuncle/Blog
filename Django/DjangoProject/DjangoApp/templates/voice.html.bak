{% extends "nav.html" %}
{% load staticfiles %}

{% block title %} 

{{ info }} 

{% endblock %}

{% block style %} 

.img{width:30%;height:30%;vertical-align:middle;}

{% endblock %}
 
{% block main %}

<div style="margin:3% 0%;">
	<div class="layui-row layui-col-space30"> 
    <div class="layui-col-md9">
			<div class="layui-row layui-col-space30">
				{% for i in info %}
					<div class="layui-col-md12">
						<div class="layui-card">
        			<div class="layui-card-header">
        				<a href="/voice/{{ i.id }}/" style="text-decoration:none;">{{ i.title }}</a>
        			</div>
        			<div class="layui-card-body">
          			发表于：{{ i.firsttime }}
          			<br>
        				<div>
              		<audio class="player" src="http://www.ytmp3.cn/down/47174.mp3"> 你的浏览器不支持 </audio>
            		</div>
        			</div>
        		</div>
        	</div>
      	{% endfor %}   
			</div>
    </div>
    
    <!--标签栏-->
    <div class="layui-col-md3 d-none d-sm-block">
      <div class="layui-card">
        <div class="layui-card-header">
        	标签栏
        </div>
        <div class="layui-card-body">
          {% for i in tag %}
          	<a href="/tag/{{ i.tag }}/" class="layui-btn layui-btn-primary layui-btn-sm" style="text-decoration:none;">{{ i.tag }}</a>
          {% endfor %}
        </div>
      </div>
    </div>    
  </div>    
</div> 
  
<!--分页-->
<div class="container">
	<nav  aria-label="Page navigation example">
		<ul class="pagination">
			<li class="step-links">
      	
      	{% if info.has_previous %}
        	<li class="page-item">
      			<a class='page-link' href="?page={{ info.previous_page_number }}" aria-label="Previous">
        			<span aria-hidden="true">&laquo;</span>
        			<span class="sr-only">Previous</span>
      			</a>
    			</li>
    		{% else %}
    			<li class="page-item disabled">
      			<a class="page-link" href="#" tabindex="-1" aria-label="Previous">
      				<span aria-hidden="true">&laquo;</span>
        			<span class="sr-only">Previous</span>
      			</a>
    			</li>
        {% endif %}
        				
				{% for i in page_range %}
					{% if info.number == i %}
						<li class="page-item active">
     	 				<a class="page-link" href="#">{{ i }} <span class="sr-only">(current)</span></a>
    				</li>
					{%else%}
						<li class="page-item"><a class="page-link" href="?page={{ i }}">{{ i }}</a></li>
					{% endif %}
				{% endfor %}
                    
        {% if info.has_next %}
        	<li class="page-item">
      			<a class="page-link" href="?page={{ info.next_page_number }}" aria-label="Next">
        			<span aria-hidden="true">&raquo;</span>
        			<span class="sr-only">Next</span>
      			</a>
    			</li>
    		{% else %}
    			<li class="page-item disabled">
      			<a class="page-link" href="#" tabindex="-1" aria-label="Next">
      				<span aria-hidden="true">&raquo;</span>
        			<span class="sr-only">Next</span>
      		  </a>
    			</li>
        {% endif %}
      </li>
  	</ul>
  </nav>
</div>
{% endblock %}